                           ],
                           "Resource":{
                              "Fn::Join":[
                                 "",
                                 [
                                    "arn:aws:s3:::",
                                    {
                                       "Ref":"S3Bucket"
                                    },
                                    "/*"
                                 ]
                              ]
                           }
                        }
