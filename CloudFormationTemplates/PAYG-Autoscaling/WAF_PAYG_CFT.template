            ],
            "UserData":{
               "Fn::Base64":{
                  "Fn::Join":[
                     "",
                     [
                        "#!/bin/bash\n",
                        "/opt/aws/bwaf/aws_autoscale.pl --command init-config --saveSystemDataOnTermination --dumpEC2Details",
                        " --stack ",
                        {
                           "Ref":"AWS::StackName"
                        },
                        " --resource BWAFAutoScaleLaunchConfig ",
                        " --region ",
                        {
                           "Ref":"AWS::Region"
                        },
                        " --s3bucketname ",
                        {
                           "Ref":"S3Bucket"
                        },
                        " --config ",
                        {
                           "Fn::Join":[
                              ":",
                              [
                                 {
                                    "Ref":"WAFServiceName"
                                 },
                                 {
                                    "Ref":"WAFServicePort"
                                 },
                                 {
                                    "Ref":"WAFServerIP"
                                 },
                                 {
                                    "Ref":"WAFServerPort"
                                 }
                              ]
                           ]
                        },
                        "\n\n",
                        "Proxy Server: ",
                        " --prx_username ",
                        {
                           "Ref":"ProxyServerUsername"
                        },
                        " --prx_password ",
                        {
                           "Ref":"ProxyServerPassword"
                        },
                        " --prx_server ",
                        {
                           "Ref":"ProxyServerIP"
                        },
                        " --prx_port ",
                        {
                           "Ref":"ProxyServerPort"
                        },
                        "\n"
